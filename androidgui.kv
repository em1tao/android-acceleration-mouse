#:kivy 2.0.0
ScreenManager:
    Connection:
    Main:

<Connection>:
    name: "connection"
    ip_field: ip_field
    click: click
    info_label: info_label
    BoxLayout:
        orientation: "vertical"
        spacing: "5px"
        MDTextField:
            id: ip_field
            hint_text: "ip adress"
        MDRaisedButton:
            id: click
            text: "Connect"
            on_release: root.connect()
        MDLabel:
            id: info_label
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            halign: "center"
            text: ""
        Widget:
        Widget

<Clicks>:
    name: "clicks"
    start_button: start_button
    BoxLayout:
        orientation: "vertical"
        Button:
            id: start_button
            text: "Start"
            on_release: root.start()
        Widget:
        BoxLayout:
            orientation: "horizontal"
            Widget:
            Button:
                text: "Left click"
                on_release: root.left_click()
            Button:
                text: "Right click"
                on_release: root.right_click()
            Widget:
        Widget:
        Widget: